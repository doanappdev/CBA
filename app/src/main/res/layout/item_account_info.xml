<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_dark_bg"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        android:background="@color/colorPrimary"
        >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default"
            android:src="@drawable/ic_transactional"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
        />

        <TextView
            android:id="@+id/accountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toRightOf="@+id/icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Complete Access"
        />

        <TextView
            android:id="@+id/accountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_small"
            android:textSize="@dimen/sub_heading_2"
            android:textStyle="bold"
            android:textColor="@color/grey_txt"
            app:layout_constraintLeft_toRightOf="@+id/icon"
            app:layout_constraintTop_toBottomOf="@+id/accountName"
            tools:text="062005 1079 5866"
        />

        <TextView
            android:id="@+id/availableFunds"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:paddingLeft="@dimen/m80"
            android:paddingStart="@dimen/m80"
            android:paddingTop="@dimen/margin_small"
            android:text="Available funds"
            android:textColor="@color/grey_txt"
            android:textSize="@dimen/sub_heading_2"
            android:background="@color/grey_light_bg"
            app:layout_constraintTop_toBottomOf="@+id/accountNumber"
        />

        <TextView
            android:id="@+id/funds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:gravity="right"
            android:paddingTop="@dimen/margin_small"
            android:paddingRight="@dimen/margin_default"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sub_heading_2"
            android:textStyle="bold"
            android:background="@color/grey_light_bg"
            app:layout_constraintLeft_toRightOf="@+id/availableFunds"
            app:layout_constraintTop_toBottomOf="@+id/accountNumber"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="$371.10"
        />

        <TextView
            android:id="@+id/accountBalance"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/m80"
            android:paddingStart="@dimen/m80"
            android:paddingBottom="@dimen/margin_small"
            android:text="Account balance"
            android:textColor="@color/grey_txt"
            android:textSize="@dimen/sub_heading_2"
            android:background="@color/grey_light_bg"
            app:layout_constraintTop_toBottomOf="@+id/availableFunds"
        />

        <TextView
            android:id="@+id/balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="@dimen/margin_default"
            android:paddingBottom="@dimen/margin_small"
            android:textColor="@color/grey_txt"
            android:textSize="@dimen/sub_heading_2"
            android:textStyle="bold"
            android:background="@color/grey_light_bg"
            app:layout_constraintLeft_toRightOf="@+id/accountBalance"
            app:layout_constraintTop_toBottomOf="@+id/funds"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="$371.10"
        />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>





