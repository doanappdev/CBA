<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <include
        android:id="@+id/headerDate"
        layout="@layout/item_header_date"
    />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayoutOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_light_bg"
        app:layout_constraintTop_toBottomOf="@id/headerDate"
        >

        <TextView
            android:id="@+id/descOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:paddingTop="@dimen/margin_default"
            android:paddingBottom="@dimen/margin_default"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/amountOne"
            tools:text="Wdl ATM CBA ATM CIRCULAR QUAY STATION NSW 221092 AUS"
        />

        <TextView
            android:id="@+id/amountOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingTop="@dimen/margin_default"
            android:paddingBottom="@dimen/margin_default"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="-$3.50"
        />


    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayoutTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/grey_light_bg"
        app:layout_constraintTop_toBottomOf="@id/constraintLayoutOne"
        >

        <TextView
            android:id="@+id/descTwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:paddingTop="@dimen/margin_default"
            android:paddingBottom="@dimen/margin_default"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/amountTwo"
            tools:text="Wdl ATM CBA ATM CIRCULAR QUAY STATION NSW 221092 AUS"
            tools:visibility="visible"
        />

        <TextView
            android:id="@+id/amountTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingTop="@dimen/margin_default"
            android:paddingBottom="@dimen/margin_default"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="-$3.50"
            tools:visibility="visible"
        />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>